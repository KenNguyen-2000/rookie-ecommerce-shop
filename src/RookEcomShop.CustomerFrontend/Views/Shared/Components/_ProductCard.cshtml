@using RookEcomShop.ViewModels.Product;
@model ProductVM;
@{
    var productImgUrl = "https://localhost:7181/api/v1/upload-image?imageName=" + (Model.ImgUrls.FirstOrDefault() ?? String.Empty).Replace("/uploads\\", "");
}

<a asp-controller="Products" asp-action="Details"  asp-route-id="@Model.Id">
    <div class="border border-gray-300 rounded-md">
        <div class="min-h-64 max-w-full overflow-hidden bg-slate-100 relative border-b border-gray-300">
            <div class="absolute top-2 left-2 z-10">
                <span class="inline-flex items-center rounded-md bg-indigo-100 px-2 py-1 text-sm uppercase font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10">Best seller</span>
            </div>
            <div class="absolute top-2 right-2 z-10">
                <button type="button" class="text-neutral-600 hover:text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
    </svg>
    
                </button>
            </div>

            @* Product card image *@
            @if (!string.IsNullOrEmpty(productImgUrl))
            {
                <div class="absolute inset-0 flex-center">
                    <img src="@productImgUrl" alt="@Model.Name" class="w-auto h-full object-cover" />
                </div>
            }
            else
            {
                <div class="absolute inset-0 flex-center">
                    <span class="text-gray-500">No image</span>
                </div>
            }
        </div>

        @* Product card content *@
        <div class="p-4">
            <strong class="inline-block text-neutral-800 mb-2">@Model.Name</strong>
            <div class="flex items-center justify-between">
                <div>
                    <span class="inline-block text-gray-500 mb-2">Price:</span>
                    <span class="block text-lg font-semibold">@Model.Price VND</span>
                </div>
    
                <button type="button" class="p-2 bg-indigo-500 rounded-md text-white hover:bg-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
    </svg>
    
                </button>
            </div>
        </div>
    </div>
</a>