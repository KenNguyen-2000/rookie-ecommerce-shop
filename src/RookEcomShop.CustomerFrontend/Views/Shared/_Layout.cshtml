@{
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RookEcomShop | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/RookEcomShop.CustomerFrontend.styles.css" asp-append-version="true" />
</head>
<body class="w-full flex min-h-screen items-stretch">
    <partial name="./Components/_Sidebar.cshtml"></partial>
    <div class="flex-1 flex flex-col min-h-screen">

        <partial name="./Components/_Header.cshtml"></partial>

        <div class="flex-1">
            <main role="main" class="container pb-3 mx-auto">
                @RenderBody()
            </main>
        </div>

        <partial name="./Components/_Footer.cshtml"></partial>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
