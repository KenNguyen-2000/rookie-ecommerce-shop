@page
@using RookEcomShop.IdentityServer.Pages.Account.Logout
@model IndexModel

<div class="logout-page">
    <div class="lead">
        <h1>Logout</h1>
        <p>Would you like to logout of IdentityServer?</p>
    </div>

    <form asp-page="/Account/Logout/Index">
        <input type="hidden" name="logoutId" value="@Model.LogoutInputModel.LogoutId" />

        <div class="form-group">
            <button class="btn btn-primary">Yes</button>
        </div>
    </form>
</div>