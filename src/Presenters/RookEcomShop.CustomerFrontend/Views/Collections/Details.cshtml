@using RookEcomShop.ViewModels.ViewModels;
@using RookEcomShop.ViewModels.Dto;
@model CollectionsVM;
@{
    ViewData["Title"] = @Model.Category.Name + " Collection";
    var products = @Model.Products;
    Layout = "~/Views/Shared/Layouts/_LayoutNoSidebar.cshtml";
}
@section PageStyles {
    <link rel="stylesheet" href="~/css/views/collections.css" />
}

<div class="min-h-screen  bg-white">
    <!-- Collections Banner -->
    <div class="mb-6 w-full relative">
        <div class="collection-banner bg-blend-overlay">
            <div class="banner-overlay">

            </div>

            <div class="w-full mx-auto max-w-screen-lg px-4 relative z-10">
                <div class="flex items-center justify-center">
                    <h3 class="text-6xl text-white text-center">Zero Watse <span
                            class="whitespace-nowrap">@ViewBag.CategoryName</span></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Sub categories -->

    <!-- Product list -->
    <div class="container mx-auto p-4 md:p-6 max-w-2xl px-4 lg:max-w-7xl">
        <partial name="~/Views/Shared/Partials/_FilterSelection.cshtml" />

        <h1 class="text-4xl font-semibold mb-6">Product list</h1>
        @* <h2 class="text-2xl font-bold tracking-tight text-gray-900">Customers also purchased</h2> *@

        <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
            @if (products.Items.Count() > 0)
            {

                @foreach (var product in products.Items)
                {
                    <vc:product-card product="product"></vc:product-card>
                }
            }
            else
            {
                <p>No products found</p>

            }

            <!-- More products... -->
        </div>

        <div class="mt-12">
            <partial name="~/Views/Shared/Partials/_Pagination.cshtml"
                model="@PaginationVM.Create(products.Page, products.PageSize, products.TotalCount)" />
        </div>

    </div>

</div>