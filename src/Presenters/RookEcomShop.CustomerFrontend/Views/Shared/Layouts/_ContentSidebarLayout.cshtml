@await Html.PartialAsync("~/Views/Shared/Sections/_Variables.cshtml")
@{
  TempData.Keep();
  Layout = "~/Views/Shared/Layouts/_CommonLayout.cshtml";
}

@section VendorStyles {
  @RenderSection("VendorStyles", required: false)
}

@section PageStyles {
  @RenderSection("PageStyles", required: false)
}

@section VendorScripts {
  @RenderSection("VendorScripts", required: false)
}

@section PageScripts {
  @RenderSection("PageScripts", required: false)
}

<div class="flex-1 flex flex-col min-h-screen">

  <div id="header-wrapper">
    <vc:header></vc:header>

  </div>
  <div class="flex-1 flex">
    <vc:sidebar></vc:sidebar>
    <main role="main" class="container mx-auto p-4 md:p-6">
      @RenderBody()
    </main>
  </div>

  <partial name="~/Views/Shared/Partials/_Footer.cshtml"></partial>
</div>
